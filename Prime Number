def prime(n):
    if n < 1:
        print("Enter an integer greater than 1.")
        return
        
    else:
        for i in range(2, n):
            if n % i == 0:
                print(n," is not a prime number.")
                return
                
        print(n," is a prime number.")
num = int(input("Enter an integer: "))
